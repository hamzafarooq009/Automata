bool isRaining = False;
bool isSnowing = True;
int temp = 45;
if isRaining == 0{if temp > 45{display("wear lightweight raincoat")} elseif temp == 45{display("Wear lightweight raincoat")} else{display("Wear Fleece and raincoat")}} elseif isSnowing != False{if temp>20{display("wear soft shell jacket")} elseif temp>=0 {display("wear down jacket")} else{display("wear base layer and down jacket")}} else{display("It is hard to come up with an interes")};

